<!-- This report counts the number of meals for each child by meal type. -->

<div class="title_center"> 
	<h2> Meal Counts by Child </h2>
</div>
<br>
<div class="reports">
	<% @children.each do |child| %>
		
		<h3>
		<%= child.fname %>
		<%= child.mname %>
		<%= child.lname %>
		</h3>
		<% @breakfast = 0 %>
		<% @am_snack = 0 %>
		<% @lunch = 0 %>
		<% @pm_snack = 0 %>
		<% @supper = 0 %>
		<% @late_snack = 0 %>
	
		<% child.meals.each do |meal| %>

			<% if meal.breakfast %>
				<% @breakfast += 1 %>
			<% end %>
			<% if meal.am_snack %>
				<% @am_snack += 1 %>
			<% end %>
			<% if meal.lunch %>
				<% @lunch += 1 %>
			<% end %>
			<% if meal.pm_snack %>
				<% @pm_snack += 1 %>
			<% end %>
			<% if meal.supper %>
				<% @supper += 1 %>
			<% end %>
			<% if meal.late_snack %>
				<% @late_snack += 1 %>
			<% end %>
			
		<% end %>

		<%= "Breakfast:" %> 
		<%= @breakfast %>
		<%= "AM Snack:" %>
		<%= @am_snack %>
		<%= "Lunch:" %>
		<%= @lunch %>
		<%= "PM Snack:" %>
		<%= @pm_snack %>
		<%= "Supper:" %>
		<%= @supper %>
		<%= "Late Snack:" %>
		<%= @late_snack %>

		<br>
	<% end %>
</div>

<div class="center_div">
	<%= button_to "Center Home", center_path(@center), class: "button_c", method: :get %>
</div>