	<!-- Form for child handoffs -->

<% @parent.children.each do |child| %>
	<%= form_for @handoff do |f| %>
		<br>
		<%= child.fname %>
		<%= child.mname %>
		<%= child.lname %>
		<br>
		<%= f.radio_button(:attend, "arrive") %>
		<%= f.label(:handoff_arrive, "DropOff") %>
		<%= f.radio_button(:attend, "depart") %>
		<%= f.label(:handoff_depart, "PickUp") %>
		<%= f.hidden_field :child_id, :value => child.id %>
		<%= f.button :submit %>
		<br>
	<% end %>
<% end %>
<br>
<%= link_to "Done", root_path %>





